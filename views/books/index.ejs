<h2 class="page-header">Search Books</h2>
<form action="books" method="GET">
    <input type="text" name="title" placeholder="Title" value="<%= searchOptions.title %>" />
    <br>
    <input type="date" name="publishedAfter" placeholder="Published After" value="<%= searchOptions.publishedAfter %>" />
    <label>Published After</label>
    <br>
    <input type="date" name="publishedBefore" placeholder="Published Before" value="<%= searchOptions.publishedBefore %>" />
    <label>Published Before</label>
    <br>
    <button type="submit">Search</button>
</form>
<br>
<% books.forEach(book => { %>
    <div>
        <span><%= book.title %></span>
        <a href="/books/<%= book.id %>">View</a>
        <a href="/books/<%= book.id %>/edit">Edit</a>
        <%- include('../partials/deleteForm', { url: `/books/${book.id}`}) %>
    </div>
<% }) %>